# =====================================
# Pipeline Backend - Production Environment Variables
# =====================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# =====================================

# ----------------
# Database (Neon PostgreSQL)
# ----------------
# Get connection string from: https://console.neon.tech
# Format: postgresql+psycopg://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql+psycopg://neondb_owner:YOUR_PASSWORD@ep-xxxx-yyyy.us-east-2.aws.neon.tech/neondb?sslmode=require

# ----------------
# JWT Authentication
# ----------------
# Generate secret: openssl rand -hex 32
JWT_SECRET_KEY=YOUR_64_CHARACTER_HEX_STRING_HERE
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ----------------
# Replicate API (AI Models)
# ----------------
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=r8_XXXXXXXXXXXXXXXXXXXXXXXXXX

# ----------------
# AWS S3 (Asset Storage)
# ----------------
# Create IAM user with S3 access
# Get from: AWS Console > IAM > Users > Security Credentials
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
S3_BUCKET_NAME=pipeline-backend-assets
AWS_REGION=us-east-2

# ----------------
# Frontend URL (CORS)
# ----------------
# Your Vercel deployment URL
# Example: https://your-app.vercel.app
FRONTEND_URL=https://your-app.vercel.app

# ----------------
# Server Configuration
# ----------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# ----------------
# Optional: Logging
# ----------------
LOG_LEVEL=INFO

# ----------------
# Optional: Rate Limiting
# ----------------
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_PER_MINUTE=60
