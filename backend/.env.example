# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local development, use a local PostgreSQL instance
# For production, use your Neon or other PostgreSQL connection string
DATABASE_URL=postgresql+psycopg://postgres:password@localhost:5432/gauntlet_pipeline

# JWT Authentication
# WARNING: Change this in production! Generate a secure random string
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API Keys
# Get your API keys from:
# - Replicate: https://replicate.com/account/api-tokens
# - OpenAI: https://platform.openai.com/api-keys
REPLICATE_API_KEY=r8_your_replicate_api_key_here
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# AWS S3 Configuration
# Get these from AWS IAM Console for your S3 user
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
S3_BUCKET_NAME=pipeline-backend-assets
AWS_REGION=us-east-2

# Frontend Configuration
# URL where your Next.js frontend is running
FRONTEND_URL=http://localhost:3000

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Video Processing API URL
# URL for the video processing API (usually same as backend)
VIDEO_PROCESSING_API_URL=http://localhost:8000
